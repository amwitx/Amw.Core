<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>Webi.Api</title>
    @RenderSection("head", false)
    <style type="text/css">
        body { font-size: 14px; width: 99%; }
        .api_manual { padding: 0; margin: 0; list-style: none; font-size: 16px; margin-top: 10px; }
        .api_container { }
        .api_controller { width: 100%; margin-top: 10px; background-color: #f3f3f3; font-size: 20px; cursor: pointer; border: 1px solid #ccc; }
        .api_controller .api_name { width: 40%; color: #428bca; }
        .api_controller .api_name a { color: #428bca; }
        .api_controller .api_des { width: 40%; }
        .api_controller .api_right { width: 20%; text-align: right; }

        .api_action, .api_parameter { width: 100%; border-left: 1px solid #ccc; border-right: 1px solid #ccc; }
        .api_action .api_name { width: 40%; }
        .api_action .api_des { width: 60%; }

        .api_item th, .api_item td { text-align: left; padding: 6px 10px 6px 10px; box-sizing: border-box; height: 35px; }
        .api_action th, .api_action td, .api_parameter th, .api_parameter td { border-bottom: 1px solid #ccc; }

        .api_parameter .api_name { width: 20%; }

        .api_parameter .api_required { width: 10%; font-weight: bold; color: red; }
        .api_parameter .api_input { width: 25%; }
        .api_parameter .api_input input { width: 100%; margin: 0; padding: 0; border: 1px solid #ccc; height: 100%; }
        .api_parameter .api_des { width: 20%; }

        .test_button { margin-top: 10px; }
        .test_http_states {width:200px;height:20px;border:#000; float: right; }
        .test_result { margin-top: 10px; }
        .test_result .api_post { width: 40%; }
        .test_result .api_des { width: 60%; }
        .test_result textarea { margin: 0; padding: 0; border: 1px solid #ccc; }
        .area_in, .area_result { resize: none; width: 100%; height: 420px; padding: 15px; overflow: scroll; }
        .split_line { height: 10px; line-height: 10px; }
        .hide { display: none; }
    </style>
</head>
<body>
    @RenderBody()
    <script src="//res.webi.com.cn/js/jquery/jquery-1.12.4.min.js"></script>
    <script src="//res.webi.com.cn/js/tools/json2.min.js"></script>
    @RenderSection("foot", false)
</body>
</html>
